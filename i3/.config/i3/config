# exec --no-startup-id i3-msg 'workspace 4: $ws4; exec /local/bizzozzero/softwares/Zotero-5.0.66_linux-x86_64/zotero'
# exec --no-startup-id i3-msg 'workspace 6: $ws6; exec $TERMINAL -e /local/bizzozzero/.venv/bin/ranger'
exec --no-startup-id i3-msg 'workspace 8: $wskeepass; exec /usr/bin/keepass /home/johnlocke/keys/main.kdbx'
# exec --no-startup-id i3-msg 'workspace 9: $ws9; exec $TERMINAL -e cmus'
# exec --no-startup-id i3-msg 'workspace 10: $ws10; exec $TERMINAL -e neomutt'

exec --no-startup-id picom -b
