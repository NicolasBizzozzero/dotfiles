# Common variables
set my_email    = "nicolasbizzozzero@gmail.com"
set my_name     = "Nicolas Bizzozz√©ro"
set my_password = "`gpg --batch --quiet --decrypt $HOME/keys/pw_google.gpg`"


# IMAP configuration
set imap_user             = $my_email
set imap_pass             = $my_password
set imap_passive          = no
set imap_check_subscribed = yes
set imap_list_subscribed  = yes
set imap_keepalive        = 300
set folder                = "imaps://imap.gmail.com:993"
set spoolfile             = "+INBOX"
set record                = "+INBOX"
set trash                 = "+Trash"
set postponed             = "+Drafts"


# SMTP configuration
set from              = $my_email
set smtp_pass         = $my_password
set realname          = $my_name
set smtp_url          = "smtps://$my_email@smtp.gmail.com:465/"
set use_envelope_from = yes


# Miscellaneous
set ssl_force_tls = yes
